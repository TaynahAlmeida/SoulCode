
// Retorne todas as contas agrupadas pelo tipo de Negócio

SELECT name, type FROM account group by type,name having type != null

// Selecione o nome, o cargo, o telefone, o nome da conta dos contatos com cargo CEO

SELECT Name, Title, Phone FROM Contact where Title LIKE 'CEO%'

//Selecione o valor, fase, nome da conta e telefone da conta da oportunidade onde o nome da conta possui Oil

SELECT Amount, StageName, Account.Name, Account.Phone FROM Opportunity WHERE Account.Name LIKE '%OIL%'

// Selecione o nome, celular, cargo, nome da conta e classificação da conta dos contatos onde a classificação da conta é Hot

SELECT Name, mobilePhone, title, Account.name, Account.rating FROM Contact WHERE Account.Rating = 'Hot'

//Selecione o nome, classificação e receita anual de conta onde classificação seja diferente de Hot, e o nome das oportunidades associadas a elas onde o valor da oportunidade esteja entre 10000 e 50000

SELECT name, rating, annualrevenue,(
SELECT name FROM Opportunities WHERE amount >10000 AND amount<50000 
)FROM account WHERE rating != 'hot'

////Selecione o nome da conta onde o nome inicia com Oil or Ed, trazendo os nomes dos contatos associados a eles com inicio em B ou A

SELECT name, (
SELECT name FROM  Contacts WHERE name like 'B%' OR name like 'A%'
)FROM Account WHERE name Like 'Oil%' OR name like 'Ed%'
