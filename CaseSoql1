//Selecione nome completo, empresa, celular, de todos os leads.

SELECT Name, Company, mobilePhone FROM Lead

//Selecione empresa, Origem do lead, status do lead, e-mail de todos os leads.
SELECT Company, LeadSource, State, Email FROM Lead

//Selecione nome da oportunidade, valor de todas oportunidades, origem, fase.
SELECT AccountId, Amount, LeadSource, StageName FROM Opportunity

//Selecione order number, nome da oportunidade, origem do lead, valor, fase e probabilidade de todas oportunidades.
SELECT OrderNumber__c, Name, LeadSource, Amount, StageName, Probability FROM Opportunity

//Selecione Empresa, Nome Completo, CNPJ, Endereço, Telefone, Origem do Lead, receita anual, email, status do lead, de todos os leads.
SELECT Company, Name, CNPJ__c, Address, Phone, LeadSource, AnnualRevenue, Email, State FROM Lead

//Selecione Conta, Nome, Horário de funcionamento, Setor, Telefone, FAX, tipo, CNPJ,  de todas as contas.
SELECT Id, Name, OperatingHoursId, Industry, Phone, Fax, Type FROM Account

//Selecione empresa, Origem do lead, status do lead dos leads com empresa iniciando com A
SELECT Company, LeadSource, State FROM Lead Where Company like 'A%’

//Selecione nome, valor e fase das oportunidades com valor superior a 400000.
SELECT Name, Amount, StageName FROM Opportunity Where Amount > 40000

//selecione o nome, valor, fase e receita esperada das oportunidades com receita esperada superior a 10000 ou valor inferior a 20000.
SELECT Name, Amount, StageName, ExpectedRevenue FROM Opportunity Where ExpectedRevenue > 10000 and Amount < 20000

//selecione o nome, cargo telefone, email e telefone dos contatos que tem nomes iniciados com B ou terminados com S.
SELECT Name, Title, Phone, Email FROM Contact Where Name like 'B%' OR Name like '%S'

//selecione o id, nome e email dos contatos com email que possua uog ou uoa no meio do email.
SELECT Id, Name, Email FROM Contact Where Email like '%uog%' OR Email like '%uoa%'

//selecione o nome das oportunidades e a quantidade de oportunidades agrupadas por nome.
 Select Name, COUNT (Id) From Opportunity Group By Name Order By Name

//selecione o nome da conta, telefone e tipo de contas onde o tipo é customer - direct ordenado por nome decrescente.
SELECT Name, Phone, Type FROM Account Where Type Like 'Customer - Direct' ORDER BY Name DESC

//selecione o nome, classificação, receita anual das contas onde a classificação é hot e receita anual maior que 200000 ordenado por receita anual.
SELECT Name, Rating, AnnualRevenue From Account Where Rating ='Hot'AND AnnualRevenue>200000 Order by AnnualRevenue

//selecione id, nome, e funcionários das contas onde a quantidade de funcionários é maior que 1000 pessoas
SELECT Id, Name, NumberOfEmployees FROM Account where NumberOfEmployees > 1000

//selecione nome, setor, receita anual das contas com classificação warm ou receita anual maior igual a 200000 e menor igual a 600000.
Select Name, Industry, AnnualRevenue From Account Where Rating = 'warm' OR (AnnualRevenue >= 200000 AND AnnualRevenue <= 600000)
